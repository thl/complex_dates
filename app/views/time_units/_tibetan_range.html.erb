           <script text="javascript">
             Event.observe('tibetan_range_start_tibetan_hour_certainty','change', function() { 
	       if($('tibetan_range_start_tibetan_hour_certainty').value == "Probable" || $('tibetan_range_start_tibetan_hour_certainty').value == "Estimated")
               {
                 $('tibetan_range_start_tibetan_end_hour').show();
               }
	       else
               {
	         $('tibetan_range_start_tibetan_end_hour').hide();
               }
	   
	     });
          </script>
<% min = (1..60).to_a.map {|x| [x,x]} %>
<% min.unshift ["", ""] %>
<p>
	<%= label_tag 'minute' %> <br/>
	<%= select_tag 'tibetan_range_start[tibetan_start_minute]', options_for_select(min) , { 'style' => 'width:150px'}%>
	<%= select_tag 'tibetan_range_start[tibetan_end_minute]', options_for_select(min) , { 'style' => 'width:150px;display:none;'}%>
