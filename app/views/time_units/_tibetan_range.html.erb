      <% e.unshift ['',''] %>
      <p>
        <%= label_tag 'element' %> <br/>
	<%= select_tag 'tibetan_range_start[element]', options_for_select(e), { 'style' => 'width:150px'} %>
	<%= select_tag 'tibetan_range_start[element_certainty]', options_for_select(certainty)%>
      </p>

      <% a =[['',''],["dragon","dragon"], ["snake","snake"], ["horse","horse"], ["sheep","sheep"], ["monkey","monkey"], ["cock","cock"], ["dog","dog"], ["boar","boar"], ["rat","rat"], ["tiger","tiger"], ["ox","ox"], ["hare","hare"]] %>
      <% a.unshift ['',''] %>
      <p>
	<%= label_tag 'animal' %> <br/>
	<%= select_tag 'tibetan_range_start[animal]', options_for_select(a), { 'style' => 'width:150px'} %>
	<%= select_tag 'tibetan_range_start[animal_certainty]', options_for_select(certainty)%>
      </p>
      <% g = [['',''],['Male','male'],['Female','female']] %>
      <% g.unshift ['',''] %>
      <p>
	<%= label_tag 'gender' %> <br/>
	<%= select_tag 'tibetan_range_start[gender]', options_for_select(g), { 'style' => 'width:150px'} %>
	<%= select_tag 'tibetan_range_start[gender_certainty]', options_for_select(certainty)%>
      </p>
      <% m = (1..12).to_a.map {|x| [x,x]} %>
