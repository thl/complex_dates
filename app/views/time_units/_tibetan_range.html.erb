	<%= select_tag 'tibetan_range_start[tibetan_end_month]', options_for_select(m) , { 'style' => 'width:150px;display:none;'}%>	
	<%= select_tag 'tibetan_range_start[tibetan_month_certainty]', options_for_select(certainty)%>
      </p>
       <script text="javascript">
         Event.observe('tibetan_range_start_tibetan_month_certainty','change', function() { 
	   if($('tibetan_range_start_tibetan_month_certainty').value == "Probable" || $('tibetan_range_start_tibetan_month_certainty').value == "Estimated")
           {
             $('tibetan_range_start_tibetan_end_month').show();
           }
	   else
           {
	     $('tibetan_range_start_tibetan_end_month').hide();
           }
	   
	  });
        </script>

        <% im = [['secondary','secondary'],['tertiary','tertiary']] %>
        <% im.unshift ['',''] %>
        <p>
	  <%= label_tag 'intercalary_month' %> <br/>
	  <%= select_tag 'tibetan_range_start[tibetan_intercalary_month]', options_for_select(im) , { 'style' => 'width:150px'}%>
	  <%= select_tag 'tibetan_range_start[tibetan_intercalary_month_certainty]', options_for_select(certainty)%>
