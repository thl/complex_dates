<fieldset id="tibetan_range_date" style="width:560px">
  <legend style="border:1px solid green; color:white; background: black;">Tibetan Date</legend>
  <%= hidden_field_tag :type, "tibetan_range" %>

  <fieldset id="tibetan_range_start" style="width:250px; float:left;">
    <legend style="border:1px solid green; color:white; background: black;">Start Date</legend>
    <% calendar = [['standard tibetan calendar','standard tibetan calendar']] %>
    <% calendar.unshift ['',''] %>
    <% certainty = [["Certain","Certain"], ["Probable", "Probable"], ["Estimated","Estimated"]] %>
    <% certainty.unshift ['',''] %>
    <p>
      <%= label_tag 'calendrical' %> <br/>
      <%= select_tag 'tibetan_range_start[calendrical]', options_for_select(calendar), { 'style' => 'width:150px'} %>
      <%= select_tag 'tibetan_range_start[calendrical_certainty]', options_for_select(certainty)%>
     </p>
     <% r = (1..50).to_a.map {|x| [x,x]} %>
     <% r.unshift(['','']) %>

      <p>
       <%= label_tag 'rabjung' %> <br/>
       <%= select_tag 'tibetan_range_start[rabjung_start]', options_for_select(r), { 'style' => 'width:150px'} %>
       <%= select_tag 'tibetan_range_start[rabjung_end]', options_for_select(r), {'style' => 'width:150px;display:none;'} %>
       <%= select_tag 'tibetan_range_start[rabjung_certainty]', options_for_select([['',''],["Certain","Certain"], ["Probable", "Probable"], ["Estimated","Estimated"]])%>
      </p>

      <script text="javascript">
        Event.observe('tibetan_range_start_rabjung_certainty','change', function() { 
	  if($('tibetan_range_start_rabjung_certainty').value == "Probable" || $('tibetan_range_start_rabjung_certainty').value == "Estimated")
           {
              $('tibetan_range_start_rabjung_end').show();
           }
	   else
           {
	     $('tibetan_range_start_rabjung_end').hide();
           }
	   
	 });
      </script>
 
