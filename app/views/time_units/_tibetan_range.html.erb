	  <%= select_tag 'tibetan_range_start[tibetan_end_day]', options_for_select(d) , { 'style' => 'width:150px;display:none;'}%>
	  <%= select_tag 'tibetan_range_start[tibetan_day_certainty]', options_for_select(certainty)%>
        </p>
 
        <script text="javascript">
          Event.observe('tibetan_range_start_tibetan_day_certainty','change', function() { 
	    if($('tibetan_range_start_tibetan_day_certainty').value == "Probable" || $('tibetan_range_start_tibetan_day_certainty').value == "Estimated")
            {
               $('tibetan_range_start_tibetan_end_day').show();
             }
	     else
             {
	       $('tibetan_range_start_tibetan_end_day').hide();
              }
	   
	   });
         </script>

         <% id = [['secondary','secondary'],['tertiary','tertiary']] %>
         <% id.unshift ['',''] %>
         <p>
	   <%= label_tag 'intercalary_day' %> <br/>
