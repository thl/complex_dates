<fieldset id="gregorian_point_date" class="">
	<legend style="border:1px solid green; color:white; background: black;">Gregorian Date</legend>
<%= @date.to_json %>
	<%= hidden_field_tag :type, "gregorian_point" %>

	<%= time_unit_field 'year', @date, 'gregorian_date', ['gregorian_year', 'gregorian_year_certainty'], nil, {:text_field => true} %>
	
	<%= time_unit_field 'month', @date, 'gregorian_date', ['gregorian_month', 'gregorian_month_certainty'], tu_options('month') %>

	<%= time_unit_field 'day', @date, 'gregorian_date', ['gregorian_day', 'gregorian_day_certainty'], tu_options('gregorian_day') %>

	<%= time_unit_field 'day_of_week', @date, 'gregorian_date', ['gregorian_day_of_week', 'gregorian_day_of_week_certainty'], tu_options('day_of_week') %>

	<%= time_unit_field 'season', @date, 'gregorian_date', ['gregorian_season', 'gregorian_season_certainty'], tu_options('season') %>

	<%= time_unit_field 'hour', @date, 'gregorian_date', ['gregorian_hour', 'gregorian_hour_certainty'], tu_options('hour') %>

	<%= time_unit_field 'minute', @date, 'gregorian_date', ['gregorian_minute', 'gregorian_minute_certainty'], tu_options('minute') %>

	<%= time_unit_field 'am_pm', @date, 'gregorian_date', ['gregorian_am_pm', 'gregorian_am_pm_certainty'], tu_options('am_pm') %>

	<%= time_unit_field 'time_of_day', @date, 'gregorian_date', ['gregorian_time_of_day', 'gregorian_time_of_day_certainty'], tu_options('time_of_day') %>

</fieldset>
