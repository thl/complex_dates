<script type="text/javascript">

function toggle_end_date(select_element, end_date_element_id){
	// Get the value of the select element
	var select_element_value = $(select_element).val();
	// Show the end date element if the select element's value is either "Probable" or "Estimated"; hide it otherwise 
	if(select_element_value == "Probable" || select_element_value == "Estimated"){
		$('#'+end_date_element_id).show();
	}else{
		$('#'+end_date_element_id).hide();
	}
	return true;
}

</script>

